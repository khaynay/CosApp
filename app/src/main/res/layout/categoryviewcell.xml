<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="@color/button_text_color"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingRight="0dp"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/catbackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_menu_camera" />

        <TextView

            android:id="@+id/labelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/catbackgroundImage"
            android:layout_below="@+id/catbackgroundImage"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/iconImage"

            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="textEnd" />

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#FF000000"
            android:id="@+id/iconImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/user"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/catbackgroundImage"
            android:layout_alignStart="@+id/catbackgroundImage" />

        <TextView
            android:visibility="gone"
            android:id="@+id/hiddenID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="TextView" />

    </RelativeLayout>


</android.support.v7.widget.CardView>