<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecoach.cosapp.Activites.Company.Addcompany">

   <ViewFlipper
       android:id="@+id/viewFlipper"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RelativeLayout

               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:weightSum="1"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true"
               android:layout_marginStart="107dp"
               android:layout_marginTop="7dp"
               android:id="@+id/relativeLayout2">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/imageButton2"
                   android:layout_width="70dp"
                   android:layout_height="70dp"

                   android:src="@drawable/ic_no_image"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:layout_weight="0.1" />

               <TextView
                   android:id="@+id/textView6"
                   android:layout_width="107dp"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/imageButton2"
                   android:layout_weight="0.9"
                   android:text="Company Logo"
                   android:textAlignment="center"
                   android:layout_alignParentStart="true" />

           </RelativeLayout>
           <ImageButton
               android:scaleType="fitCenter"
               android:id="@+id/imageButton3"
               android:layout_width="100dp"
               android:layout_height="100dp"
               app:srcCompat="@drawable/location_pin"
               android:layout_below="@+id/relativeLayout2"
               android:layout_alignEnd="@+id/relativeLayout2" />

       </RelativeLayout>
      <RelativeLayout
          android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <Switch
              android:padding="3dp"
              android:id="@+id/useEmailSwitch"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Use you current Email" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/domain"
              android:layout_below="@+id/useEmailSwitch"
              android:id="@+id/companyname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="textPersonName"
              android:hint="Company Name"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true" />


          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/tag_multiple"
              android:id="@+id/companyCategory"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="74dp"
              android:ems="10"
              android:inputType="textPersonName"
              android:hint="Company Category"
              android:layout_alignParentEnd="true" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/email_open"
              android:id="@+id/companyemail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/companyCategory"
              android:ems="10"
              android:inputType="textPersonName"
              android:hint="Company Email"
              android:layout_alignParentEnd="true" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/phone"
              android:id="@+id/phone1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/companyemail"
              android:ems="10"
              android:inputType="phone"
              android:hint="Phone number 1"
              android:layout_alignParentEnd="true" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/phone"
              android:id="@+id/phone2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/phone1"
              android:ems="10"
              android:inputType="phone"
              android:hint="Phone number 2 (Optional)"
              android:layout_alignParentEnd="true" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/web"
              android:id="@+id/website"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/phone2"
              android:ems="10"
              android:inputType="textPersonName"
              android:hint="Website URL"
              android:layout_alignParentEnd="true" />

          <EditText
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/map_marker_radius"
              android:id="@+id/address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/website"
              android:ems="10"
              android:inputType="textPersonName"
              android:hint="Physical Address"
              android:layout_alignParentEnd="true" />

          <EditText
              android:id="@+id/companyBio"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/address"
              android:hint="Company Bio"
              android:inputType="textMultiLine" />

          <Button
              android:id="@+id/nextButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_below="@+id/companyBio"
              android:layout_marginEnd="12dp"
              android:layout_marginTop="12dp"
              android:text="Next" />

      </RelativeLayout>
   </ViewFlipper>




</RelativeLayout>
