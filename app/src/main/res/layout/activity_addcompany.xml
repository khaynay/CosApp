<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecoach.cosapp.Activites.Company.Addcompany">

   <ViewFlipper
       android:id="@+id/viewFlipper"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true">




       <RelativeLayout
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <Switch
               android:padding="3dp"
               android:id="@+id/useEmailSwitch"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Use you current Email" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/domain"
               android:layout_below="@+id/useEmailSwitch"
               android:id="@+id/companyname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="10"
               android:inputType="textPersonName"
               android:hint="Company Name"
               android:layout_alignParentEnd="true"
               android:layout_alignParentStart="true" />


           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/tag_multiple"
               android:id="@+id/companyCategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="74dp"
               android:ems="10"
               android:inputType="textPersonName"
               android:hint="Company Category"
               android:layout_alignParentEnd="true" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/email_open"
               android:id="@+id/companyemail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/companyCategory"
               android:ems="10"
               android:inputType="textPersonName"
               android:hint="Company Email"
               android:layout_alignParentEnd="true" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/phone"
               android:id="@+id/phone1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/companyemail"
               android:ems="10"
               android:inputType="phone"
               android:hint="Phone number 1"
               android:layout_alignParentEnd="true" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/phone"
               android:id="@+id/phone2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/phone1"
               android:ems="10"
               android:inputType="phone"
               android:hint="Phone number 2 (Optional)"
               android:layout_alignParentEnd="true" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/web"
               android:id="@+id/website"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/phone2"
               android:ems="10"
               android:inputType="textPersonName"
               android:hint="Website URL"
               android:layout_alignParentEnd="true" />

           <EditText
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/map_marker_radius"
               android:id="@+id/address"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/website"
               android:ems="10"
               android:inputType="textPersonName"
               android:hint="Physical Address"
               android:layout_alignParentEnd="true" />

           <EditText
               android:id="@+id/companyBio"
               android:layout_width="wrap_content"
               android:layout_height="70dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/address"
               android:hint="Company Bio"
               android:inputType="textMultiLine" />



       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RelativeLayout


               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:id="@+id/relativeLayout2"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/imageButton2"
                   android:layout_width="50dp"
                   android:layout_height="50dp"

                   android:src="@drawable/ic_no_image"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:layout_weight="0.1" />

               <TextView
                   android:id="@+id/textView6"
                   android:layout_width="107dp"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/imageButton2"
                   android:layout_weight="0.9"
                   android:text="Company Logo"
                   android:textAlignment="center"
                   android:layout_alignParentStart="true" />

           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/relativeLayout3"
               android:layout_below="@+id/relativeLayout2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:padding="3dp"
                   android:drawablePadding="2dp"
                   android:drawableStart="@drawable/map_marker_radius"
                   android:layout_marginTop="10dp"
                   android:id="@+id/pinBusinesslocation"

                   android:layout_width="match_parent"
                   android:text="Pin Business Location"
                   android:layout_height="wrap_content" />
               <ImageButton
                   android:layout_below="@+id/pinBusinesslocation"
                   android:scaleType="fitCenter"
                   android:id="@+id/imageButton3"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   app:srcCompat="@drawable/location_pin"
                   />

           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/relativeLayout4"
               android:layout_below="@+id/relativeLayout3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:padding="3dp"
                   android:drawablePadding="2dp"
                   android:drawableStart="@drawable/no_image"
                   android:layout_marginTop="10dp"
                   android:id="@+id/businesscover"

                   android:layout_width="match_parent"
                   android:text="Business Cover photo"
                   android:layout_height="wrap_content" />
               <ImageButton
                   android:layout_below="@+id/businesscover"
                   android:scaleType="fitXY"

                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:src="@drawable/ic_no_image" />

           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/relativeLayout5"
               android:layout_below="@+id/relativeLayout4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:drawablePadding="2dp"
                   android:drawableStart="@drawable/paperclip"
                   android:layout_width="match_parent"
                   android:text="Business Certificates"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true"
                   android:layout_toStartOf="@+id/button2" />
               <Button
                   android:text="Select"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentEnd="true"
                   android:id="@+id/button2" />



           </RelativeLayout>




       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:padding="10dp"
               android:id="@+id/textlabel"
               android:text="Chat Page Background"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <RelativeLayout
               android:layout_margin="10dp"
               android:layout_below="@+id/textlabel"
               android:id="@+id/colorpickerlayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.flask.colorpicker.ColorPickerView
                   android:layout_marginRight="40dp"
                   android:layout_alignParentEnd="true"
                   android:id="@+id/color_picker_view"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   app:alphaSlider="true"
                   app:density="12"
                   app:lightnessSlider="true"
                   app:wheelType="FLOWER"
                   app:lightnessSliderView="@+id/v_lightness_slider"
                   app:alphaSliderView="@+id/v_alpha_slider" />
               <TextView
                   android:layout_marginLeft="10dp"
                   android:drawablePadding="10dp"
                   android:drawableStart="@drawable/format_color_fill"
                   android:id="@+id/textView7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Select Color"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true"
                   android:layout_marginStart="24dp" />


           </RelativeLayout>

           <RelativeLayout
               android:layout_margin="10dp"
               android:id="@+id/selectLayoutImageLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/colorpickerlayout"
               android:layout_alignParentStart="true">


               <ImageView
                   android:id="@+id/imageView5"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_no_image"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentEnd="true"
                   android:layout_marginEnd="36dp" />

               <TextView
                   android:drawablePadding="10dp"
                   android:drawableStart="@drawable/no_image"
                   android:id="@+id/textView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="Select Image"
                   android:layout_centerVertical="true"
                   android:layout_alignParentStart="true" />

           </RelativeLayout>


           <Switch
               android:layout_margin="10dp"
               android:layout_below="@+id/selectLayoutImageLayout"
               android:id="@+id/switch3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:text="Use Default Background" />


       </RelativeLayout>



   </ViewFlipper>
    <RelativeLayout
        android:layout_below="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/backButton"
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="12dp"
            android:text="Next"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



</RelativeLayout>
