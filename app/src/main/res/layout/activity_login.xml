<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.ecoach.cosapp.Activites.UserAccounts.LoginActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_no_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <info.hoang8f.widget.FButton
            android:textColor="@android:color/white"
            app:buttonColor="@color/colorPrimary"
            app:shadowEnabled="true"
            app:shadowHeight="1dp"
            app:cornerRadius="5dp"
            android:padding="10dp"
            android:id="@+id/createAccountButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginBottom="53dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/createAccountButton"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/togglepass"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/usernameEdt">

        <EditText
            android:drawableStart="@drawable/lock"
            android:id="@+id/passwordEdt"
            android:layout_width="300dp"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/togglepass"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:maxLines="1"

            />
</android.support.design.widget.TextInputLayout>

        <EditText
            android:drawableStart="@drawable/account_outline"
            android:id="@+id/usernameEdt"
            android:drawablePadding="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:layout_above="@+id/togglepass"
            android:layout_centerHorizontal="true" />

        <info.hoang8f.widget.FButton
            android:textColor="@android:color/white"
            app:buttonColor="@color/colorPrimary"
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_below="@+id/togglepass"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/togglepass" />

    </RelativeLayout>

</RelativeLayout>
