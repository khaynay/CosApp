<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.ecoach.cosapp.Activites.UserAccounts.LoginActivity">

    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <EditText
            android:drawableStart="@drawable/account_outline"
            android:id="@+id/usernameEdt"
            android:drawablePadding="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:layout_above="@+id/passwordEdt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp" />

        <EditText
            android:drawableStart="@drawable/lock"
            android:id="@+id/passwordEdt"
            android:layout_width="300dp"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/usernameEdt"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password" />



        <info.hoang8f.widget.FButton
            android:textColor="@android:color/white"
            app:buttonColor="@color/colorPrimary"
            android:id="@+id/loginButton"
            app:cornerRadius="0dp"
            app:shadowHeight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/passwordEdt"
            android:layout_alignStart="@+id/passwordEdt"
            android:layout_below="@+id/passwordEdt"
            android:layout_marginTop="17dp"
            android:text="Login" />

        <TextView
            android:id="@+id/forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/loginButton"
            android:layout_alignStart="@+id/loginButton"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="24dp"
            android:padding="5dp"
            android:text="Forgot Password"
            android:textAlignment="center"
            android:textStyle="bold" />

        <info.hoang8f.widget.FButton
            android:textColor="@android:color/white"
            app:buttonColor="@color/colorPrimary"
            app:shadowEnabled="true"
            app:shadowHeight="1dp"
            app:cornerRadius="0dp"
            android:padding="10dp"
            android:id="@+id/createAccountButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Create Account"
            android:layout_below="@+id/forgotpassword"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cosapp" />

</RelativeLayout>
